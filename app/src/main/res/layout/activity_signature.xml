<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@drawable/choiceeducationbg"
    android:orientation="vertical"
    tools:context=".signature">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp"
            android:gravity="center"
            android:text="請於空白處簽名："
            android:textSize="36sp" />

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="650dp"
            android:layout_marginStart="650dp"
            android:background="@drawable/choiceedubutton1"
            android:onClick="clear"
            android:text="清除"
            android:textColor="#ffffffff"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/choiceedubutton1"
            android:onClick="W"
            android:text="確定"
            android:textColor="#ffffffff"
            android:textSize="36sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="769dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <com.example.dialysishealtheducation.mainview
            android:id="@+id/mainview"
            android:layout_width="match_parent"
            android:layout_height="733dp" />
    </LinearLayout>


</LinearLayout>